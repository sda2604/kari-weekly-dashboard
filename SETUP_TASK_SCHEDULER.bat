@echo off
chcp 65001 >nul
echo ============================================================
echo   СОЗДАНИЕ ЗАДАЧИ В ПЛАНИРОВЩИКЕ WINDOWS
echo   Еженедельный запуск в понедельник в 20:00
echo ============================================================
echo.

set "SCRIPT_PATH=%~dp0run_full_pipeline.bat"

echo Создаю задачу KARI_Weekly_Report...
echo Путь к скрипту: %SCRIPT_PATH%
echo.

schtasks /create /tn "KARI_Weekly_Report" /tr "\"%SCRIPT_PATH%\"" /sc weekly /d MON /st 20:00 /f

if %ERRORLEVEL% EQU 0 (
    echo.
    echo ============================================================
    echo   УСПЕХ! Задача создана
    echo ============================================================
    echo   Имя: KARI_Weekly_Report
    echo   Расписание: Каждый понедельник в 20:00
    echo   Действие: Генерация дашборда и отправка в Telegram
    echo.
    echo Проверить задачу: schtasks /query /tn KARI_Weekly_Report
    echo ============================================================
) else (
    echo.
    echo ============================================================
    echo   ОШИБКА при создании задачи
    echo   Попробуй запустить от имени администратора
    echo ============================================================
)

pause
