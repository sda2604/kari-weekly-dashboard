# ============================================
# KARI Dashboard - Environment Variables
# ============================================
#
# ВАЖНО: Скопируй этот файл в .env и заполни реальными значениями
# Команда: copy .env.example .env
#

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================

# Токен бота (получи у @BotFather в Telegram)
BOT_TOKEN=your_bot_token_here

# ID группы для рассылки (используй get_group_id.bat для получения)
GROUP_CHAT_ID=your_group_chat_id_here

# Список chat_id получателей для личных сообщений (через запятую)
# Пример: 1064766678,1234567890,9876543210
RECIPIENTS=your_recipient_ids_here

# Использовать групповую рассылку (true/false)
USE_GROUP=true

# ============================================
# PATHS
# ============================================

# Путь к дашборду относительно telegram_bot/
DASHBOARD_PATH=../output/dashboard_current.html

# ============================================
# LOGGING
# ============================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Формат логов (json или text)
LOG_FORMAT=json

# Директория для логов
LOG_DIR=../logs

# ============================================
# OPTIONAL SETTINGS
# ============================================

# Таймаут для HTTP запросов к Telegram API (секунды)
TELEGRAM_TIMEOUT=30

# Количество повторных попыток при ошибке отправки
TELEGRAM_RETRY_COUNT=3

# Задержка между повторными попытками (секунды)
TELEGRAM_RETRY_DELAY=2
